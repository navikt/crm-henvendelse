<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="recordComponent">
    <apiVersion>47.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Thread viewer - for Messaging</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="recordId" type="String" label="Record ID" description="Should be set to {!recordId}" />
            <property name="header" type="String" label="Header text" />
            <property name="secondheader" type="String" label="Secondary header text" />
            <property
                name="alerttext"
                type="String"
                label="Alert text when closed"
                description="Alert text shown when the thread is closed. HTML formatted"
                default="Dialogen er lukket"
            />
            <property
                name="alertopen"
                type="String"
                label="Alert text when still open"
                description="Alert text shown when the thread is closed. HTML formatted"
                default=""
            />
            <property
                name="hidealert"
                type="Boolean"
                label="Hide infoboxes"
                description="Hides the infoboxes from beeing shown"
                default="false"
            />
            <property
                name="alwaysclosed"
                type="Boolean"
                label="Always closed"
                description="Ensures that the thread is always seen as closed"
                default="false"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
