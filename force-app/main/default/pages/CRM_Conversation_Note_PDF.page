<apex:page
    controller="CRM_ConvNotePdfController"
    applyBodyTag="false"
    standardStylesheets="false"
    renderAs="PDF"
    readOnly="true"
>
    <apex:stylesheet value="{!$Resource.Journal_PDF_Style}" />

    <div class="document">
        <div class="header">
            <!-- HEADER CONTENT-->
            <apex:image
                url="{!URLFOR($Resource.stoLogos,
                'navLogo.png')}"
            />
        </div>

        <div class="content">
            <h2>
                Journalført henvendelse 
                <apex:outputText value="{!IF(NOT(ISBLANK($CurrentPage.parameters.selectedTheme)), 
                                              ' ' & $CurrentPage.parameters.selectedTheme, 
                                              ' ' & convNote.CRM_Theme__r.Name)}" />
                <apex:outputText value="{!IF(NOT(ISBLANK($CurrentPage.parameters.selectedTheme)), 
                                            ' ' & $CurrentPage.parameters.selectedSubtheme, 
                                            ' ' & convNote.CRM_Subtheme__r.Name)}"  />
            </h2>
            

            <span> <b>Navn: </b>{!convNote.CRM_Account__r.Name} <br /> </span>
            <span> <b>Fødselsnummer: </b>{!convNote.CRM_Account__r.INT_PersonIdent__c} <br /> </span>
            <span>
                <b>Mottatt/Sendt: </b>
                <apex:outputText value=" {!convNote.CRM_Date_Time_Registered__c}"></apex:outputText>
                <br />
            </span>
            <span> <b>Type: </b>Referat <br /> </span>
            <br />

            <span style="font-weight: 400; font-size: 16pt">Innhold:</span> <br />
            <div style="margin-top: 0.25em; white-space: pre-wrap">
                <apex:outputText escape="false" value="{!messageText}"></apex:outputText>
            </div>
        </div>

        <div class="footer">
            <!-- FOOTER CONTENT -->
            <div>Side <span class="pagenumber" /> av <span class="pagecount" /></div>
        </div>
    </div>
</apex:page>
